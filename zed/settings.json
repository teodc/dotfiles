// https://zed.dev/docs/configuring-zed
// https://zed.dev/docs/configuring-languages
// https://zed.dev/docs/vim
{
	"always_treat_brackets_as_autoclosed": false,
	"assistant": {
		"default_model": {
   "provider": "openai",
   "model": "gpt-4o"
  },
  "version": "2",
  "button": true,
		"default_height": 320,
		"default_width": 640,
		"dock": "right",
		"enabled": true
	},
	"auto_install_extensions": {
		"html": true,
		"ruff": true,
		"toml": true
	},
	"auto_signature_help": false,
	"auto_update": true,
	"autosave": "off",
	"base_keymap": "JetBrains",
	"buffer_font_family": "Hack Nerd Font Mono",
	"buffer_font_features": {
		// Disable ligatures
		"calt": false
	},
	"buffer_font_size": 23,
	"buffer_line_height": {
		"custom": 1.9
	},
	"calls": {
		"mute_on_join": false,
		"share_on_join": false
	},
	"centered_layout": {
		"left_padding": 0.1,
		"right_padding": 0.1
	},
	"chat_panel": {
		"button": true,
		"default_width": 320,
		"dock": "right"
	},
	"collaboration_panel": {
		"button": true,
		"default_width": 320,
		"dock": "left"
	},
	"completion_documentation_secondary_query_debounce": 300,
	"confirm_quit": true,
	"current_line_highlight": "all",
	"cursor_blink": false,
	"default_dock_anchor": "bottom",
	"diagnostics": {
		"include_warnings": true
	},
	"double_click_in_multibuffer": "select",
	"enable_language_server": true,
	"ensure_final_newline_on_save": true,
	"features": {
		"inline_completion_provider": "copilot"
	},
	"file_scan_exclusions": ["**/.*.cache", "..."],
	"file_types": {
		"Dockerfile": ["Dockerfile", "Dockerfile.*"]
	},
	"format_on_save": "on",
	"formatter": "auto",
	"git": {
		"git_gutter": "tracked_files",
		"inline_blame": {
			"delay_ms": 600,
			"enabled": false
		}
	},
	"gutter": {
		"code_actions": false,
		"folds": true,
		"line_numbers": true,
		"runnables": false
	},
	"hard_tabs": false,
	"hover_popover_enabled": true,
	"indent_guides": {
		"active_line_width": 1,
		"background_coloring": "disabled",
		"coloring": "fixed",
		"enabled": true,
		"line_width": 1
	},
	"inlay_hints": {
		"edit_debounce_ms": 700,
		"enabled": true,
		"scroll_debounce_ms": 50,
		"show_other_hints": true,
		"show_parameter_hints": true,
		"show_type_hints": true
	},
	"inline_completions": {
		"disabled_globs": [".env"]
	},
	"journal": {
		"hour_format": "hour12",
		"path": "~"
	},
	"language_servers": ["..."],
	"languages": {
		"Go": {
			"code_actions_on_format": {
				"source.organizeImports": true
			},
			"formatter": "language_server",
			"hard_tabs": true
		},
		"JSON": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			},
			"language_servers": ["biome"],
			"prettier": {
				"allowed": false
			}
		},
		"JSONC": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			},
			"language_servers": ["biome"],
			"prettier": {
				"allowed": false
			}
		},
		"Markdown": {
			"format_on_save": "on"
		},
		"Python": {
			"code_actions_on_format": {
				"source.organizeImports.ruff": true,
				"source.fixAll.ruff": true
			},
			"formatter": {
				"language_server": {
					"name": "ruff"
				}
			},
			"language_servers": ["ruff"]
		}
	},
	"line_indicator_format": "long",
	"linked_edits": true,
	"lsp": {
		// https://github.com/biomejs/biome-zed
		"biome": {
			"settings": {
				"config_path": "<path>/biome.json",
				"require_config_file": false
			}
		},
		// https://github.com/golang/tools/tree/master/gopls
		"gopls": {
			"initialization_options": {
				// https://github.com/golang/tools/blob/master/gopls/doc/settings.md
				"hints": {
					"assignVariableTypes": true,
					"compositeLiteralFields": true,
					"compositeLiteralTypes": true,
					"constantValues": true,
					"functionTypeParameters": true,
					"parameterNames": true,
					"rangeVariableTypes": true
				}
				//"usePlaceholders": false
			}
		},
		// https://docs.astral.sh/ruff/editors/setup/#zed
		"ruff": {
			"initialization_options": {
				"settings": {
					// https://docs.astral.sh/ruff/editors/settings/
					"lineLength": 120
				}
			}
		}
	},
	"message_editor": {
		"auto_replace_emoji_shortcode": true
	},
	"notification_panel": {
		"button": true,
		"default_width": 320,
		"dock": "right"
	},
	"outline_panel": {
		"auto_fold_dirs": false,
		"auto_reveal_entries": true,
		"button": true,
		"default_width": 320,
		"dock": "left",
		"file_icons": true,
		"folder_icons": true,
		"git_status": true,
		"indent_size": 20
	},
	"preferred_line_length": 120,
	"preview_tabs": {
		"enable_preview_from_code_navigation": false,
		"enable_preview_from_file_finder": false,
		"enabled": false
	},
	"project_panel": {
		"auto_fold_dirs": false,
		"auto_reveal_entries": true,
		"button": true,
		"default_width": 320,
		"dock": "left",
		"file_icons": true,
		"folder_icons": true,
		"git_status": true,
		"indent_size": 20,
		"scrollbar": {
			"show": "never"
		}
	},
	"projects_online_by_default": true,
	"relative_line_numbers": true,
	"remove_trailing_whitespace_on_save": true,
	"restore_on_startup": "none",
	"scroll_beyond_last_line": "vertical_scroll_margin",
	"scrollbar": {
		"cursors": true,
		"diagnostics": true,
		"git_diff": true,
		"search_results": true,
		"selected_symbol": true,
		"show": "system"
	},
	"seed_search_query_from_cursor": "selection",
	"show_call_status_icon": true,
	"show_completion_documentation": true,
	"show_completions_on_input": true,
	"show_inline_completions": true,
	"show_signature_help_after_edits": true,
	"show_whitespaces": "boundary",
	"show_wrap_guides": true,
	"soft_wrap": "none",
	"tab_bar": {
		"show": true,
		"show_nav_history_buttons": false
	},
	"tab_size": 4,
	"tabs": {
		"close_position": "right",
		"file_icons": false,
		"git_status": true
	},
	"tasks": {
		"variables": {}
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"terminal": {
		"alternate_scroll": "off",
		"blinking": "terminal_controlled",
		"button": true,
		"copy_on_select": false,
		"default_height": 320,
		"env": {},
		"font_family": "Hack Nerd Font Mono",
		"font_features": null,
		"font_size": 19,
		"line_height": {
			"custom": 1.7
		},
		"option_as_meta": false,
		"shell": "system",
		"toolbar": {
			"title": true
		},
		"working_directory": "current_project_directory"
	},
	"theme": {
		"dark": "Catppuccin Mocha - No Italics",
		"light": "Ayu Light",
		"mode": "dark"
	},
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false,
		"selections_menu": true
	},
	"ui_font_family": "Hack Nerd Font Mono",
	"ui_font_features": {
		// Disable ligatures
		"calt": false
	},
	"ui_font_size": 17,
	"use_auto_surround": true,
	"use_autoclose": false,
	"vertical_scroll_margin": 5,
	"vim": {
		"use_multiline_find": true,
		"use_smartcase_find": false,
		"use_system_clipboard": "always"
	},
	"vim_mode": true,
	"wrap_guides": [80, 120]
}
